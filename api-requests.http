### Get stations by location ID

# Get stations for Badger Den (location_id = 1)
GET http://localhost:5132/api/menu/stations/location/1

###

# Get stations for Busters Bistro (location_id = 2)
GET http://localhost:5132/api/menu/stations/location/2

###

# Get the list of all locations
GET http://localhost:5132/api/menu/locations

###

### Location Controller

# Get all cafeteria locations
GET http://localhost:5132/api/location

###

# Get a single location by ID
GET http://localhost:5132/api/location/1

###

# Create a new location
POST http://localhost:5132/api/location
Content-Type: application/json

{
	"name": "New Campus Cafe",
	"description": "Pop-up cafe near the Noyes building"
}

###

# Update an existing location
PUT http://localhost:5132/api/location/1
Content-Type: application/json

{
	"name": "Badger Den",
	"description": "Updated description for Badger Den"
}

###

# Delete a location by ID
DELETE http://localhost:5132/api/location/3

###

# Get all business hours for a location
GET http://localhost:5132/api/location/1/hours

###

# Get specific business hours by ID
GET http://localhost:5132/api/location/hours/1

###

# Add business hours for a location
POST http://localhost:5132/api/location/1/hours
Content-Type: application/json

{
	"startTime": "2025-01-01T07:30:00",
	"endTime": "2025-01-01T15:30:00",
	"weekdayId": 1
}

###

# Update business hours for a location
PUT http://localhost:5132/api/location/hours/1
Content-Type: application/json

{
	"startTime": "2025-01-01T08:00:00",
	"endTime": "2025-01-01T16:00:00",
	"weekdayId": 2
}

###

# Delete business hours for a location
DELETE http://localhost:5132/api/location/hours/5

###

