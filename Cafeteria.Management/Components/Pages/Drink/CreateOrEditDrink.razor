@rendermode InteractiveServer
@using Cafeteria.Management.Components.Shared

@if (ViewModel?.IsVisible ?? false)
{
    <Toast Message="@ViewModel.ToastMessage" 
           Type="@ViewModel.ToastType" 
           IsVisible="@ViewModel.ShowToast" 
           OnClose="@(() => ViewModel.ShowToast = false)" />

    <div class="modal" style="display: block;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(ViewModel.IsEditing ? "Edit Drink" : "Create Drink")</h5>
                    <button type="button" class="close" @onclick="HandleClose">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Drink Name:</label>
                        <input type="text" @bind="ViewModel.CurrentDrink.DrinkName" />
                    </div>
                    <div class="form-group">
                        <label>Station:</label>
                        <select @bind="ViewModel.CurrentDrink.StationId" class="form-control">
                            <option value="0">-- Select a Station --</option>
                            @foreach (var station in ViewModel.Stations)
                            {
                                <option value="@station.Id">@station.StationName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Price:</label>
                        <input type="number" step="0.01" @bind="ViewModel.CurrentDrink.DrinkPrice" />
                    </div>
                    <div class="form-group">
                        <label>Description:</label>
                        <textarea @bind="ViewModel.CurrentDrink.DrinkDescription"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HandleClose">Close</button>
                    <button type="button" class="btn btn-primary" @onclick="HandleSave">Save</button>
                </div>
            </div>
        </div>
    </div>
}