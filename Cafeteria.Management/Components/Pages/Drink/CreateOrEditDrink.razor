@rendermode InteractiveServer

@if (ViewModel?.IsVisible ?? false)
{
    <div class="modal" style="display: block;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(ViewModel.IsEditing ? "Edit Drink" : "Create Drink")</h5>
                    <button type="button" class="close" @onclick="HandleClose">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div>
                        <label>Drink Name:</label>
                        <input type="text" @bind="ViewModel.CurrentDrink.DrinkName" />
                    </div>
                    <div>
                        <label>Station ID:</label>
                        <input type="number" @bind="ViewModel.CurrentDrink.StationId" />
                    </div>
                    <div>
                        <label>Price:</label>
                        <input type="number" step="0.01" @bind="ViewModel.CurrentDrink.DrinkPrice" />
                    </div>
                    <div>
                        <label>Description:</label>
                        <textarea @bind="ViewModel.CurrentDrink.DrinkDescription"></textarea>
                    </div>
                    <div>
                        <label>Image URL:</label>
                        <input type="text" @bind="ViewModel.CurrentDrink.ImageUrl" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HandleClose">Close</button>
                    <button type="button" class="btn btn-primary" @onclick="HandleSave">Save</button>
                </div>
            </div>
        </div>
    </div>
}
