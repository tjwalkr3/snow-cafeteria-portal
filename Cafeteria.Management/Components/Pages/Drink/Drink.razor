@page "/drinks"
@rendermode InteractiveServer
@using Cafeteria.Management.Components.Shared

<PageTitle>Drinks</PageTitle>

<h1>Drinks</h1>

<button type="button" @onclick="HandleCreateClick">Add Drink</button>

@if (ViewModel.Drinks.Any())
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Station ID</th>
                <th>Price</th>
                <th>Description</th>
                <th>In-Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var drink in ViewModel.Drinks)
            {
                <tr @key="drink.Id">
                    <td>@drink.DrinkName</td>
                    <td>@drink.StationId</td>
                    <td>@drink.DrinkPrice</td>
                    <td>@drink.DrinkDescription</td>
                    <td>
                        <input type="checkbox" checked="@drink.InStock" @onchange="@(e => ViewModel.ToggleStockStatus(drink.Id, (bool)e.Value!))" />
                    </td>
                    <td>
                        <button type="button" @onclick="() => HandleEditClick(drink.Id)">Edit</button>
                        <button type="button" @onclick="() => HandleDeleteClick(drink.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No drinks found.</p>
}

<CreateOrEditDrink @ref="modalComponent"></CreateOrEditDrink>

<ConfirmationModal IsVisible="ShowDeleteModal" Title="Delete Drink" Message="@DeleteMessage" ConfirmText="Delete"
    OnConfirm="ConfirmDelete" OnCancel="CancelDelete" />

<Toast Message="@toastMessage" Type="@toastType" IsVisible="@showToast" OnClose="@(() => showToast = false)" />