@rendermode InteractiveServer

@if (ViewModel.IsVisible)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        @if (ViewModel.GetState() == CreateOrEditLocationVM.LocationModalState.Create)
                        {
                            <span>Create Location</span>
                        }
                        else
                        {
                            <span>Edit @ViewModel.SelectedLocation.LocationName</span>
                        }
                    </h5>
                    <button type="button" class="btn-close" @onclick="ViewModel.Close" aria-label="Close"></button>
                </div>
                <EditForm Model="@ViewModel.SelectedLocation" OnValidSubmit="ViewModel.SaveAsync">
                    <DataAnnotationsValidator />
                    <div class="modal-body">
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <InputText class="form-control" @bind-Value="ViewModel.SelectedLocation.LocationName" />
                            <ValidationMessage For="@(() => ViewModel.SelectedLocation.LocationName)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <InputTextArea class="form-control" @bind-Value="ViewModel.SelectedLocation.LocationDescription" />
                            <ValidationMessage For="@(() => ViewModel.SelectedLocation.LocationDescription)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Image URL</label>
                            <InputText class="form-control" @bind-Value="ViewModel.SelectedLocation.ImageUrl" />
                            <ValidationMessage For="@(() => ViewModel.SelectedLocation.ImageUrl)" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="ViewModel.Close">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}
