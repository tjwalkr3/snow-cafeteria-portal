<div class="card mb-3">
    <div class="card-header" @onclick="Toggle" style="cursor: pointer;">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">@Location.LocationName</h5>
            <span>@(IsCollapsed ? "▼" : "▲")</span>
        </div>
    </div>
    @if (!IsCollapsed)
    {
        <div class="card-body">
            <p>@Location.LocationDescription</p>
            @StationContainer
        </div>
    }
</div>