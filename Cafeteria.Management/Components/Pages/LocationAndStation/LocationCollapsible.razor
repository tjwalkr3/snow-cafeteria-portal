@using Cafeteria.Shared.Enums
@using System

<div>
    <div @onclick="Toggle">
        <div>
            <h5>@Location.LocationName</h5>
            <div>
                <button @onclick="Edit" @onclick:stopPropagation="true">Edit</button>
                <button @onclick="Delete" @onclick:stopPropagation="true">Delete</button>
                <span>@(IsExpanded ? "▲" : "▼")</span>
            </div>
        </div>
    </div>
    @if (IsExpanded)
    {
        <div>
            <p>@Location.LocationDescription</p>
            
            <div>
                <button @onclick="AddStation">Add Station</button>
            </div>

            @if (LocationHours.Any())
            {
                <h6>Location Business Hours</h6>
                <table>
                    <thead>
                        <tr>
                            <th></th>
                            @foreach (var day in Enum.GetValues<WeekDay>())
                            {
                                <th>@day</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>Open</th>
                            @foreach (var day in Enum.GetValues<WeekDay>())
                            {
                                var hours = LocationHours.FirstOrDefault(h => h.WeekdayId == (int)day);
                                <td>@(hours?.OpenTime.ToString() ?? "-")</td>
                            }
                        </tr>
                        <tr>
                            <th>Close</th>
                            @foreach (var day in Enum.GetValues<WeekDay>())
                            {
                                var hours = LocationHours.FirstOrDefault(h => h.WeekdayId == (int)day);
                                <td>@(hours?.CloseTime.ToString() ?? "-")</td>
                            }
                        </tr>
                    </tbody>
                </table>
            }

            <div>
                @if (Stations.Any())
                {
                    <ul>
                        @foreach (var station in Stations)
                        {
                            <li>
                                <div>
                                    <div>
                                        <h6>@station.StationName</h6>
                                        <small>@station.StationDescription</small>
                                    </div>
                                    <div>
                                        <button @onclick="() => EditStation(station)">Edit</button>
                                        <button @onclick="() => DeleteStation(station.Id)">Delete</button>
                                    </div>
                                </div>

                                @if (StationHours.TryGetValue(station.Id, out var sHours) && sHours.Any() && AreHoursDifferent(LocationHours, sHours))
                                {
                                    <div>
                                        <strong>Station Hours:</strong>
                                        <table>
                                            <thead>
                                                <tr>
                                                    <th></th>
                                                    @foreach (var day in Enum.GetValues<WeekDay>())
                                                    {
                                                        <th>@day</th>
                                                    }
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <th>Open</th>
                                                    @foreach (var day in Enum.GetValues<WeekDay>())
                                                    {
                                                        var hours = sHours.FirstOrDefault(h => h.WeekdayId == (int)day);
                                                        <td>@(hours?.OpenTime.ToString() ?? "-")</td>
                                                    }
                                                </tr>
                                                <tr>
                                                    <th>Close</th>
                                                    @foreach (var day in Enum.GetValues<WeekDay>())
                                                    {
                                                        var hours = sHours.FirstOrDefault(h => h.WeekdayId == (int)day);
                                                        <td>@(hours?.CloseTime.ToString() ?? "-")</td>
                                                    }
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>No stations found for this location.</p>
                }
            </div>
            @ChildContent
        </div>
    }
</div>
