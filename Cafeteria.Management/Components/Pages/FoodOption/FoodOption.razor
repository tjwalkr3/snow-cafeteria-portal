@page "/food-options"
@rendermode InteractiveServer
@using Cafeteria.Management.Components.Shared
@using Cafeteria.Management.Components.Pages.FoodType

<PageTitle>Food Options & Types Management</PageTitle>

<div class="container-fluid py-4">
    @if ((FoodTypeVM.FoodTypes == null || FoodOptionVM.FoodOptions == null) && !IsInitialized)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading data...</p>
        </div>
    }
    else if (IsInitialized && (FoodTypeVM.ErrorOccurred() || FoodOptionVM.ErrorOccurred()))
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Error</h4>
            <p>Failed to load data. Please try again later.</p>
        </div>
    }
    else if (FoodTypeVM.FoodTypes != null && FoodOptionVM.FoodOptions != null)
    {
        <h1 class="mb-4">Food Options & Types Management</h1>

        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Food Option Types</h4>
                    </div>
                    <div class="card-body">
                        <button class="btn btn-primary mb-3" @onclick="ShowCreateTypeModal">
                            <i class="bi bi-plus-circle"></i> Add Type
                        </button>

                        @if (FilteredFoodTypes.Count == 0)
                        {
                            <div class="alert alert-info">
                                No food option types found. Click "Add Type" to create one.
                            </div>
                        }
                        else
                        {
                            <div class="border rounded">
                                @foreach (var foodType in FilteredFoodTypes)
                                {
                                    <div class="border-bottom">
                                        <div class="d-flex justify-content-between align-items-center p-3 @(expandedTypes.Contains(foodType.Id) ? "bg-light" : "")"
                                            style="cursor: pointer;" @onclick="() => ToggleTypeExpansion(foodType.Id)">
                                            <div>
                                                <span class="me-2">@(GetTypeIcon(foodType))</span>
                                                <strong>@foodType.FoodOptionTypeName</strong>
                                                <button class="btn btn-sm btn-link text-decoration-none"
                                                    @onclick:stopPropagation="true" @onclick="() => ShowEditTypeModal(foodType)">
                                                    [Edit]
                                                </button>
                                                <button class="btn btn-sm btn-link text-danger text-decoration-none"
                                                    @onclick:stopPropagation="true"
                                                    @onclick="() => ShowDeleteTypeConfirmation(foodType)">
                                                    [×]
                                                </button>
                                            </div>
                                            <span>@(expandedTypes.Contains(foodType.Id) ? "▲" : "▼")</span>
                                        </div>

                                        @if (expandedTypes.Contains(foodType.Id))
                                        {
                                            <div class="p-3 bg-white">
                                                <div class="mb-3">
                                                    <div class="d-flex gap-3 mb-2">
                                                        <div>
                                                            <strong>Selection:</strong>
                                                            @(foodType.MaxAmount == 1 ? "● Single Choice" : "● Multiple")
                                                        </div>
                                                    </div>
                                                    <div class="d-flex gap-3">
                                                        <div>Min: [@foodType.NumIncluded]</div>
                                                        <div>Max: [@foodType.MaxAmount]</div>
                                                        <div>Required: [@(foodType.NumIncluded > 0 ? "✓" : "")]</div>
                                                    </div>
                                                    <div class="mt-2">
                                                        <div>Price: $@foodType.FoodOptionPrice.ToString("F2")</div>
                                                    </div>
                                                </div>

                                                <div class="mb-2">
                                                    <strong>Food Options:</strong>
                                                    <button class="btn btn-sm btn-link"
                                                        @onclick="() => ShowCreateOptionModal(foodType.Id)">
                                                        [+ Add Food Option]
                                                    </button>
                                                </div>

                                                @{
                                                    var typeOptions = GetOptionsForType(foodType.Id);
                                                }

                                                @if (typeOptions.Any())
                                                {
                                                    <ul class="list-unstyled ms-3">
                                                        @foreach (var option in typeOptions)
                                                        {
                                                            <li class="mb-2">
                                                                <span class="me-2">•</span>
                                                                <strong>@option.FoodOptionName</strong>
                                                                <span class="ms-2">
                                                                    @if (option.InStock)
                                                                    {
                                                                        <span class="text-success">[✓] Available</span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="text-danger">[✗] Unavailable</span>
                                                                    }
                                                                </span>
                                                                <button class="btn btn-sm btn-link text-decoration-none"
                                                                    @onclick="() => ShowEditOptionModal(option, foodType.Id)">
                                                                    [Edit]
                                                                </button>
                                                                <button class="btn btn-sm btn-link text-danger text-decoration-none"
                                                                    @onclick="() => ShowRemoveOptionFromType(option, foodType.Id)">
                                                                    [Remove]
                                                                </button>
                                                            </li>
                                                        }
                                                    </ul>
                                                }
                                                else
                                                {
                                                    <p class="text-muted ms-3">No food options added yet.</p>
                                                }
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-4">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0">Food Options</h4>
                    </div>
                    <div class="card-body">
                        <button class="btn btn-success mb-3" @onclick="ShowCreateStandaloneOptionModal">
                            <i class="bi bi-plus-circle"></i> Add Food Option
                        </button>

                        @if (FilteredFoodOptions.Count == 0)
                        {
                            <div class="alert alert-info">
                                No food options found. Click "Add Food Option" to create one.
                            </div>
                        }
                        else
                        {
                            <div class="border rounded">
                                @foreach (var option in FilteredFoodOptions)
                                {
                                    <div class="border-bottom p-3 @(expandedOptions.Contains(option.Id) ? "bg-light" : "")"
                                        style="cursor: pointer;" @onclick="() => ToggleOptionExpansion(option.Id)">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>@option.FoodOptionName</strong>
                                                <span class="ms-2">
                                                    @if (option.InStock)
                                                    {
                                                        <span class="badge bg-success">In Stock</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">Out of Stock</span>
                                                    }
                                                </span>
                                                <button class="btn btn-sm btn-link text-decoration-none"
                                                    @onclick:stopPropagation="true"
                                                    @onclick="() => ShowEditStandaloneOptionModal(option)">
                                                    [Edit]
                                                </button>
                                                <button class="btn btn-sm btn-link text-danger text-decoration-none"
                                                    @onclick:stopPropagation="true"
                                                    @onclick="() => ShowDeleteOptionConfirmation(option)">
                                                    [Delete]
                                                </button>
                                            </div>
                                            <span>@(expandedOptions.Contains(option.Id) ? "▲" : "▼")</span>
                                        </div>

                                        @if (expandedOptions.Contains(option.Id))
                                        {
                                            <div class="mt-3 ms-3">
                                                @{
                                                    var typesForOption = GetTypesForOption(option.Id);
                                                }

                                                @if (typesForOption.Any())
                                                {
                                                    <div class="mb-2">
                                                        <strong>Used in Types:</strong>
                                                        <ul class="mt-2">
                                                            @foreach (var type in typesForOption)
                                                            {
                                                                <li>@type.FoodOptionTypeName</li>
                                                            }
                                                        </ul>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <p class="text-muted">Not assigned to any type yet.</p>
                                                }
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>


@if (ShowOptionModal)
{
    <FoodOptionModal FoodOption="SelectedFoodOption" FoodTypeId="CurrentFoodTypeId" OnSave="HandleOptionSave"
        OnCancel="HandleOptionCancel" />
}

@if (ShowTypeModal)
{
    <FoodTypeModal FoodType="SelectedFoodType" OnSave="HandleTypeSave" OnCancel="HandleTypeCancel" />
}

<ConfirmationModal IsVisible="ShowDeleteOptionModal" Title="Delete Food Option" Message="@DeleteOptionMessage"
    ConfirmText="Delete" OnConfirm="ConfirmDeleteOption" OnCancel="CancelDeleteOption" />

<ConfirmationModal IsVisible="ShowDeleteTypeModal" Title="Delete Food Type"
    Message="@($"Are you sure you want to delete '{FoodTypeToDelete?.FoodOptionTypeName}'? This action cannot be undone.")"
    ConfirmText="Delete" OnConfirm="ConfirmDeleteType" OnCancel="CancelDeleteType" />

<ConfirmationModal IsVisible="ShowRemoveFromTypeModal" Title="Remove Option from Type" Message="@RemoveFromTypeMessage"
    ConfirmText="Remove" OnConfirm="ConfirmRemoveFromType" OnCancel="CancelRemoveFromType" />

<Cafeteria.Management.Components.Shared.Toast Message="@toastMessage" Type="@toastType" IsVisible="@showToast"
    OnClose="@(() => showToast = false)" />