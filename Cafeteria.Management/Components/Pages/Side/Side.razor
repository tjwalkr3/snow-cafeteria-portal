@page "/sides"
@rendermode InteractiveServer
@using Cafeteria.Shared.DTOs
@using Cafeteria.Management.Components.Shared

<PageTitle>Sides Management Page</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Sides</h3>
    <button class="btn btn-outline-secondary" @onclick="ShowCreateModal">Add Side</button>
</div>

<div class="mb-3">
    <div class="d-flex gap-2 mb-2">
        <span>Filters: [Location ▼] [Station ▼] [Status ▼]</span>
    </div>
</div>

<hr />

@if (ViewModel.Sides == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="list-group">
        @foreach (var side in ViewModel.Sides)
        {
            <div class="list-group-item" @key="side.Id">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="fw-bold">@side.SideName</div>
                        <div class="text-muted small">Station Name: @ViewModel.GetStationName(side.StationId)</div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="stock-toggle-@side.Id" checked="@side.InStock" @onchange="@(e => ViewModel.SetInStockAsync(side.Id, (bool)e.Value!))" />
                            <label class="form-check-label" for="stock-toggle-@side.Id">@(side.InStock ? "In Stock" : "Out of Stock")</label>
                        </div>
                    </div>
                    <div class="text-end">
                        <div>$@side.SidePrice.ToString("F2")</div>
                        <div class="mt-2">
                            <button class="btn btn-link btn-sm text-decoration-none" @onclick="() => ShowEditModal(side)">[Edit]</button>
                            <button class="btn btn-link btn-sm text-danger text-decoration-none" @onclick="() => DeleteSide(side.Id)">[Delete]</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (ShowModal)
{
    <CreateOrEditSide SideModel="@CurrentSide" IsEditMode="@IsEditMode" OnSave="@HandleSave" OnCancel="@CloseModal" />
}

<ConfirmationModal 
    Title="@ConfirmationTitle" 
    Message="@ConfirmationMessage" 
    IsVisible="@ShowConfirmation" 
    OnConfirm="@ConfirmDelete" 
    OnCancel="@CancelDelete" 
    ConfirmText="Delete" />
