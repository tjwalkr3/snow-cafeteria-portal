@page "/sides"
@rendermode InteractiveServer

<PageTitle>Sides</PageTitle>

<h1>Sides</h1>

<button type="button" @onclick="HandleCreateClick">Add Side</button>

@if (ViewModel.Sides.Any())
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Station ID</th>
                <th>Price</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var side in ViewModel.Sides)
            {
                <tr @key="side.Id">
                    <td>@side.SideName</td>
                    <td>@side.StationId</td>
                    <td>@side.SidePrice</td>
                    <td>@side.SideDescription</td>
                    <td>
                        <button type="button" @onclick="() => HandleEditClick(side.Id)">Edit</button>
                        <button type="button" @onclick="() => HandleDeleteClick(side.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No sides found.</p>
}

<CreateOrEditSide @ref="modalComponent"></CreateOrEditSide>