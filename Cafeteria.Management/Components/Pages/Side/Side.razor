@page "/sides"
@rendermode InteractiveServer
@using Cafeteria.Shared.DTOs

<PageTitle>Sides</PageTitle>

<h1>Sides</h1>

<p>Manage sides here.</p>

@if (ViewModel.Sides == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Station ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var side in ViewModel.Sides)
            {
                <tr>
                    <td>@side.StationId</td>
                    <td>@side.SideName</td>
                    <td>@side.SideDescription</td>
                    <td>@side.SidePrice.ToString("C")</td>
                    <td>
                        <button class="btn btn-danger" @onclick="() => DeleteSide(side.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
