@rendermode InteractiveServer

@if (ViewModel?.IsVisible ?? false)
{
    <div class="modal" style="display: block;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(ViewModel.IsEditing ? "Edit Side" : "Create Side")</h5>
                    <button type="button" class="close" @onclick="HandleClose">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Side Name:</label>
                        <input type="text" @bind="ViewModel.CurrentSide.SideName" />
                    </div>
                    <div class="form-group">
                        <label>Station ID:</label>
                        <input type="number" min="1" @bind="ViewModel.CurrentSide.StationId" />
                    </div>
                    <div class="form-group">
                        <label>Price:</label>
                        <input type="number" step="0.01" @bind="ViewModel.CurrentSide.SidePrice" />
                    </div>
                    <div class="form-group">
                        <label>Description:</label>
                        <textarea @bind="ViewModel.CurrentSide.SideDescription"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Image URL:</label>
                        <input type="text" @bind="ViewModel.CurrentSide.ImageUrl" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HandleClose">Close</button>
                    <button type="button" class="btn btn-primary" @onclick="HandleSave">Save</button>
                </div>
            </div>
        </div>
    </div>
}
