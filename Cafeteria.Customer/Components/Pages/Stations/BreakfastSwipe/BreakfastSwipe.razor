@page "/breakfast"
@rendermode InteractiveServer
@using Cafeteria.Shared.DTOs

<PageTitle>Breakfast Station</PageTitle>

<div class="container py-4">
    <div class="mb-4">
        <a href="@CreateBackUrl()" class="back-button text-decoration-none d-inline-flex align-items-center">
            <i class="bi bi-arrow-left-circle-fill me-2 fs-5"></i>
            <span class="fw-medium">Back to Station Selection</span>
        </a>
    </div>
    <div class="mb-4">
        <h1 class="station-page-title mb-1 fs-1 fw-bold d-flex align-items-center">
            <i class="bi bi-egg-fried me-3"></i>Breakfast Station
        </h1>
    </div>

    <div class="modern-tabs">
        <button class="modern-tab @(VM.ActiveTab == "entrees" ? "active" : "")"
                type="button"
                @onclick="@(() => SetActiveTab("entrees"))">
            Entrees
        </button>
        <button class="modern-tab @(VM.ActiveTab == "sides" ? "active" : "")"
                type="button"
                @onclick="@(() => SetActiveTab("sides"))">
            Sides
        </button>
        <button class="modern-tab @(VM.ActiveTab == "drinks" ? "active" : "")"
                type="button"
                @onclick="@(() => SetActiveTab("drinks"))">
            Drinks
        </button>
    </div>

    <div class="content-area">
        @if (VM.ActiveTab == "entrees")
        {
            <div class="info-banner warning">
                <div>
                    Choose ONE breakfast option for a swipe. Each option will come with a fountain drink.
                    <strong>NO SUBSTITUTIONS!</strong>
                </div>
            </div>

            @foreach (var entree in VM.Entrees)
            {
                <div class="meal-card @(VM.SelectedEntree?.Id == entree.Id ? "selected" : "")"
                     @onclick="() => SelectEntree(entree)">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div class="flex-grow-1">
                            <h5 class="mb-1 fw-600">@entree.EntreeName</h5>
                            @if (!string.IsNullOrEmpty(entree.EntreeDescription))
                            {
                                <p class="text-muted mb-0" style="font-size: 0.9rem;">@entree.EntreeDescription</p>
                            }
                        </div>
                        <div class="ms-3">
                            <span class="price-badge">$@entree.EntreePrice.ToString("F2")</span>
                        </div>
                    </div>

                    @if (VM.SelectedEntree?.Id == entree.Id)
                    {
                        <div class="mt-3 pt-3" style="border-top: 2px solid #e9ecef;">
                            @if (entree.Id == 1)
                            {
                                <div class="mb-3">
                                    <label class="d-block mb-2 text-uppercase" style="font-size: 0.75rem; font-weight: 600; color: #6c757d; letter-spacing: 0.5px;">Bread Choice</label>
                                    <div class="option-group">
                                        <button type="button" class="option-btn @(VM.SelectedBreadOption == "English Muffin" ? "selected" : "")"
                                                @onclick="@(() => SetBreadOption("English Muffin"))"
                                                @onclick:stopPropagation="true">
                                            English Muffin
                                        </button>
                                        <button type="button" class="option-btn @(VM.SelectedBreadOption == "Biscuit" ? "selected" : "")"
                                                @onclick="@(() => SetBreadOption("Biscuit"))"
                                                @onclick:stopPropagation="true">
                                            Biscuit
                                        </button>
                                    </div>
                                </div>
                                <div>
                                    <label class="d-block mb-2 text-uppercase" style="font-size: 0.75rem; font-weight: 600; color: #6c757d; letter-spacing: 0.5px;">Meat Choice</label>
                                    <div class="option-group">
                                        <button type="button" class="option-btn @(VM.SelectedMeatOption == "Sausage" ? "selected" : "")"
                                                @onclick="@(() => SetMeatOption("Sausage"))"
                                                @onclick:stopPropagation="true">
                                            Sausage
                                        </button>
                                        <button type="button" class="option-btn @(VM.SelectedMeatOption == "Bacon" ? "selected" : "")"
                                                @onclick="@(() => SetMeatOption("Bacon"))"
                                                @onclick:stopPropagation="true">
                                            Bacon
                                        </button>
                                        <button type="button" class="option-btn @(VM.SelectedMeatOption == "Ham" ? "selected" : "")"
                                                @onclick="@(() => SetMeatOption("Ham"))"
                                                @onclick:stopPropagation="true">
                                            Ham
                                        </button>
                                    </div>
                                </div>
                            }

                            @if (entree.Id == 2)
                            {
                                <div>
                                    <label class="d-block mb-2 text-uppercase" style="font-size: 0.75rem; font-weight: 600; color: #6c757d; letter-spacing: 0.5px;">Meat Choice</label>
                                    <div class="option-group">
                                        <button type="button" class="option-btn @(VM.SelectedMeatOption == "Bacon" ? "selected" : "")"
                                                @onclick="@(() => SetMeatOption("Bacon"))"
                                                @onclick:stopPropagation="true">
                                            Bacon
                                        </button>
                                        <button type="button" class="option-btn @(VM.SelectedMeatOption == "Ham" ? "selected" : "")"
                                                @onclick="@(() => SetMeatOption("Ham"))"
                                                @onclick:stopPropagation="true">
                                            Ham
                                        </button>
                                        <button type="button" class="option-btn @(VM.SelectedMeatOption == "Sausage" ? "selected" : "")"
                                                @onclick="@(() => SetMeatOption("Sausage"))"
                                                @onclick:stopPropagation="true">
                                            Sausage
                                        </button>
                                    </div>
                                </div>
                            }

                            @if (entree.Id == 4)
                            {
                                <div>
                                    <label class="d-block mb-2 text-uppercase" style="font-size: 0.75rem; font-weight: 600; color: #6c757d; letter-spacing: 0.5px;">Meat Choice</label>
                                    <div class="option-group">
                                        <button type="button" class="option-btn @(VM.SelectedMeatOption == "Sausage" ? "selected" : "")"
                                                @onclick="@(() => SetMeatOption("Sausage"))"
                                                @onclick:stopPropagation="true">
                                            Sausage
                                        </button>
                                        <button type="button" class="option-btn @(VM.SelectedMeatOption == "Bacon" ? "selected" : "")"
                                                @onclick="@(() => SetMeatOption("Bacon"))"
                                                @onclick:stopPropagation="true">
                                            Bacon
                                        </button>
                                        <button type="button" class="option-btn @(VM.SelectedMeatOption == "Ham" ? "selected" : "")"
                                                @onclick="@(() => SetMeatOption("Ham"))"
                                                @onclick:stopPropagation="true">
                                            Ham
                                        </button>
                                    </div>
                                </div>
                            }

                            @if (entree.Id == 7)
                            {
                                <div>
                                    <label class="d-block mb-2 text-uppercase" style="font-size: 0.75rem; font-weight: 600; color: #6c757d; letter-spacing: 0.5px;">Meat Choice</label>
                                    <div class="option-group">
                                        <button type="button" class="option-btn @(VM.SelectedMeatOption == "Sausage" ? "selected" : "")"
                                                @onclick="@(() => SetMeatOption("Sausage"))"
                                                @onclick:stopPropagation="true">
                                            Sausage
                                        </button>
                                        <button type="button" class="option-btn @(VM.SelectedMeatOption == "Bacon" ? "selected" : "")"
                                                @onclick="@(() => SetMeatOption("Bacon"))"
                                                @onclick:stopPropagation="true">
                                            Bacon
                                        </button>
                                        <button type="button" class="option-btn @(VM.SelectedMeatOption == "Ham" ? "selected" : "")"
                                                @onclick="@(() => SetMeatOption("Ham"))"
                                                @onclick:stopPropagation="true">
                                            Ham
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
        }
        else if (VM.ActiveTab == "sides")
        {
            <div class="info-banner">
                <div>Select 1 side with your meal swipe</div>
            </div>

            @foreach (var side in VM.Sides)
            {
                <div class="meal-card @(VM.SelectedSide?.Id == side.Id ? "selected" : "")"
                     @onclick="() => SelectSide(side)">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1 fw-600">@side.SideName</h5>
                            @if (!string.IsNullOrEmpty(side.SideDescription))
                            {
                                <p class="text-muted mb-0" style="font-size: 0.9rem;">@side.SideDescription</p>
                            }
                        </div>
                        <div>
                            <span class="price-badge">$@side.SidePrice.ToString("F2")</span>
                        </div>
                    </div>
                </div>
            }
        }
        else if (VM.ActiveTab == "drinks")
        {
            <div class="info-banner info">
                <div>
                    <i class="bi bi-info-circle me-2"></i>Select 1 drink included with your meal swipe
                </div>
            </div>

            @if (VM.Drinks.Any())
            {
                @foreach (var drink in VM.Drinks)
                {
                    <div class="meal-card @(VM.SelectedDrink?.Id == drink.Id ? "selected" : "")"
                         @onclick="() => SelectDrink(drink)">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1 fw-600">@drink.DrinkName</h5>
                                @if (!string.IsNullOrEmpty(drink.DrinkDescription))
                                {
                                    <p class="text-muted mb-0" style="font-size: 0.9rem;">@drink.DrinkDescription</p>
                                }
                            </div>
                            <div>
                                @if (VM.SelectedDrink?.Id == drink.Id)
                                {
                                    <i class="bi bi-check-circle-fill fs-4" style="color: #212529;"></i>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="meal-card selected">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1 fw-600">Fountain Drink</h5>
                            <p class="text-muted mb-0" style="font-size: 0.9rem;">Included with your meal</p>
                        </div>
                        <div>
                            <i class="bi bi-check-circle-fill fs-4" style="color: #212529;"></i>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <div class="footer-bar">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <span style="color: #6c757d; font-size: 0.95rem;">@VM.GetSelectionCount() items selected</span>
                @if (VM.SelectedEntree != null && VM.RequiresMeatSelection(VM.SelectedEntree.Id))
                {
                    @if (!string.IsNullOrEmpty(VM.SelectedMeatOption))
                    {
                        <span class="selection-badge">@VM.SelectedMeatOption</span>
                    }
                }
                @if (VM.SelectedEntree?.Id == 1 && !string.IsNullOrEmpty(VM.SelectedBreadOption))
                {
                    <span class="selection-badge">@VM.SelectedBreadOption</span>
                }
            </div>
            <button type="button"
                    class="add-btn"
                    disabled="@(!VM.IsValidSelection())"
                    @onclick="AddToOrder">
                Add to Order
            </button>
        </div>
    </div>

    @if (VM.OrderConfirmation != null)
    {
        <div class="success-alert">
            <i class="bi bi-check-circle-fill fs-3"></i>
            <div class="flex-grow-1">
                <h6 class="fw-600 mb-1">Order Added!</h6>
                <p class="mb-0" style="font-size: 0.9rem;">@VM.OrderConfirmation</p>
            </div>
            <button type="button" class="btn-close btn-close-white" @onclick="ClearOrderConfirmation"></button>
        </div>
    }
</div>
