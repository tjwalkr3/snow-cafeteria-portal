@page "/"
@using System.Text.Json
@using Microsoft.AspNetCore.WebUtilities
@using System.Text.Json.Nodes
@inject NavigationManager Navigation

<PageTitle>Select Payment Method</PageTitle>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Select Your Payment Method</h2>
            <p class="text-muted">Please choose a payment method to continue</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column text-center">
                    <h5 class="card-title">Credit/Debit Card</h5>
                    <p class="card-text text-muted">Pay with funds on a credit or debit card.</p>
                    <div class="mt-auto">
                        <a href="@(CreateUrl("card"))" class="btn btn-primary btn-lg w-100">
                            Pay With Card
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column text-center">
                    <h5 class="card-title">Swipes</h5>
                    <p class="card-text text-muted">Pay with a swipe from your Snow College meal plan.</p>
                    <div class="mt-auto">
                        <a href="@(CreateUrl("swipe"))" class="btn btn-primary btn-lg w-100">
                            Pay With Swipes
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>