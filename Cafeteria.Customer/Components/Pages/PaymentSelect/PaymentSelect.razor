@page "/"
@using Cafeteria.Shared.DTOsOld
@using System.Text.Json
@using Microsoft.AspNetCore.WebUtilities
@using System.Text.Json.Nodes
@inject NavigationManager Navigation

<PageTitle>Select Payment Method</PageTitle>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="payment-title mb-3 fs-1 fw-bold">Choose Payment Method</h1>
        <p class="payment-subtitle fs-5 text-muted mb-0">Select how you'd like to pay for your order</p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 g-4 justify-content-center">
        <div class="col">
            <a href="@CreateUrl("swipe")" class="payment-card">
                <div class="mb-4">
                    <div class="icon-circle">
                        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                            <line x1="1" y1="10" x2="23" y2="10"></line>
                        </svg>
                    </div>
                </div>
                <h3 class="payment-card-title mb-3 fs-4 fw-bold">Meal Plan Swipe</h3>
                <p class="payment-card-description mb-0 fs-6">Use your student ID card</p>
            </a>
        </div>

        <div class="col">
            <a href="@CreateUrl("card")" class="payment-card">
                <div class="mb-4">
                    <div class="icon-circle">
                        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="2" y="5" width="20" height="14" rx="2"></rect>
                            <line x1="2" y1="10" x2="22" y2="10"></line>
                        </svg>
                    </div>
                </div>
                <h3 class="payment-card-title mb-3 fs-4 fw-bold">Credit/Debit Card</h3>
                <p class="payment-card-description mb-0 fs-6">Pay securely with your credit or debit card. We accept all major cards.</p>
            </a>
        </div>
    </div>
</div>