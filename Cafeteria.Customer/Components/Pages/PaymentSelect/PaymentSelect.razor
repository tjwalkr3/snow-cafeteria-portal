@page "/"
@using System.Text.Json
@using Microsoft.AspNetCore.WebUtilities
@using System.Text.Json.Nodes
@inject NavigationManager Navigation

<PageTitle>Select Payment Method</PageTitle>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="payment-title mb-3 fs-1 fw-bold">Choose Payment Method</h1>
        <p class="payment-subtitle fs-5 text-muted mb-0">Select how you'd like to pay for your order</p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 g-4 justify-content-center">
        <div class="col">
            <a href="@CreateUrl("swipe")" class="card-link text-decoration-none">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <div class="card-body text-center p-4">
                        <div class="mb-4">
                            <div class="icon-circle">
                                <i class="bi bi-credit-card-2-front fs-2"></i>
                            </div>
                        </div>
                        <h3 class="card-title payment-card-title mb-3 fs-4 fw-bold">Meal Plan Swipe</h3>
                        <p class="card-text payment-card-description mb-0 fs-6 text-muted">Use your student ID card</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col">
            <a href="@CreateUrl("card")" class="card-link text-decoration-none">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <div class="card-body text-center p-4">
                        <div class="mb-4">
                            <div class="icon-circle">
                                <i class="bi bi-wallet2 fs-2"></i>
                            </div>
                        </div>
                        <h3 class="card-title payment-card-title mb-3 fs-4 fw-bold">Credit/Debit Card</h3>
                        <p class="card-text payment-card-description mb-0 fs-6 text-muted">Pay securely with your credit
                            or debit card. We accept all major cards.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .payment-title:focus-visible {
        outline: none !important;
        border: none !important;
    }
</style>