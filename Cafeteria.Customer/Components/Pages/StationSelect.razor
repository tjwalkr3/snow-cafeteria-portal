@page "/station-select"
@using Cafeteria.Shared.DTOs
@using Cafeteria.Customer.Components.ViewModelInterfaces
@inject IStationSelectVM StationSelectVM
@inject NavigationManager Navigation

<PageTitle>Select Station</PageTitle>

<div class="container">
    @if (StationSelectVM.Stations == null && IsInitialized == false)
    {
        <div class="row">
            <div class="col-12 text-center">
                <div class="alert alert-warning">
                    <h4>Loading stations...</h4>
                    <p>Please wait while we load the available stations.</p>
                </div>
            </div>
        </div>
    }
    else if (IsInitialized == true && StationSelectVM.ErrorOccurredWhileParsingSelectedLocation())
    {
        <div class="row">
            <div class="col-12 text-center">
                <div class="alert alert-danger">
                    <h4>Error loading stations</h4>
                    <p>Please contact a developer.</p>
                </div>
            </div>
        </div>
    }
    else if (StationSelectVM.Stations != null)
    {
        <div class="row">
            <div class="col-12">
                <h2>Select Your Station</h2>
                <p class="text-muted">Please choose your preferred dining station to continue</p>
            </div>
        </div>

        <div class="row justify-content-center">
            @foreach (var station in StationSelectVM.Stations)
            {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column text-center">
                        <h5 class="card-title">@station.StationName</h5>
                        <p class="card-text text-muted">@station.StationDescription</p>
                        <div class="mt-auto">
                            <a href="/item-select?station-id=@Uri.EscapeDataString(station.Id.ToString())" class="btn btn-primary btn-lg w-100">
                                Select @station.StationName
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    }
</div>
