@page "/station-select"

<PageTitle>Select Station</PageTitle>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Select Your Station</h2>
            <p class="text-muted">Please choose your preferred dining station to continue</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column text-center">
                    <h5 class="card-title">Grill Station</h5>
                    <p class="card-text text-muted">Fresh burgers, fries, and grilled items</p>
                    <div class="mt-auto">
                        <button type="button" class="btn btn-primary btn-lg w-100">
                            Select Grill Station
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column text-center">
                    <h5 class="card-title">Pizza Station</h5>
                    <p class="card-text text-muted">Oven-fired pizzas and calzones</p>
                    <div class="mt-auto">
                        <button type="button" class="btn btn-primary btn-lg w-100">
                            Select Pizza Station
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column text-center">
                    <h5 class="card-title">Sandwich Station</h5>
                    <p class="card-text text-muted">Fresh sandwiches and wraps</p>
                    <div class="mt-auto">
                        <button type="button" class="btn btn-primary btn-lg w-100">
                            Select Sandwich Station
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
