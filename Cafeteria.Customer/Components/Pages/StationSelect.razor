@page "/station-select"
@using Cafeteria.Shared

<PageTitle>Select Station</PageTitle>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Select Your Station</h2>
            <p class="text-muted">Please choose your preferred dining station to continue</p>
        </div>
    </div>

    <div class="row justify-content-center">
        @foreach (var station in stations)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column text-center">
                        <h5 class="card-title">@station.Name</h5>
                        <p class="card-text text-muted">@station.Description</p>
                        <div class="mt-auto">
                            <button type="button" class="btn btn-primary btn-lg w-100">
                                Select @station.Name
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private List<Station> stations = new();

    protected override void OnInitialized()
    {
        stations = new List<Station>
        {
            new Station(
                name: "Grill Station",
                description: "Fresh burgers, fries, and grilled items"
            ),
            new Station(
                name: "Pizza Station",
                description: "Oven-fired pizzas and calzones"
            ),
            new Station(
                name: "Sandwich Station",
                description: "Fresh sandwiches and wraps"
            )
        };
    }
}
