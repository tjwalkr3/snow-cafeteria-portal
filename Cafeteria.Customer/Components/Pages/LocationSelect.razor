@page "/"
@using Cafeteria.Shared
@using Cafeteria.Customer.Components.ViewModelInterfaces
@inject ILocationSelectViewModel LocationSelectVM
@inject NavigationManager Navigation

<PageTitle>Select Location</PageTitle>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Select Your Location</h2>
            <p class="text-muted">Please choose your cafeteria location to continue</p>
        </div>
    </div>

    <div class="row justify-content-center">
        @foreach (var location in LocationSelectVM.Locations)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column text-center">
                        <h5 class="card-title">@location.Name</h5>
                        <p class="card-text text-muted">@location.Address</p>
                        <div class="mt-auto">
                            <a href="/station-select?location=@Uri.EscapeDataString(location.Name)" class="btn btn-primary btn-lg w-100">
                                Select @location.Name
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
