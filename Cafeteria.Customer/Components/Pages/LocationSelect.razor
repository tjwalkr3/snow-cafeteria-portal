@page "/"

<PageTitle>Select Location</PageTitle>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Select Your Location</h2>
            <p class="text-muted">Please choose your cafeteria location to continue</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column text-center">
                    <h5 class="card-title">Badger Den</h5>
                    <p class="card-text text-muted">Main cafeteria located in the Student Center</p>
                    <div class="mt-auto">
                        <button type="button" class="btn btn-primary btn-lg w-100">
                            Select Badger Den
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column text-center">
                    <h5 class="card-title">Buster's Bistro</h5>
                    <p class="card-text text-muted">Secondary cafeteria located in the Library Gallery</p>
                    <div class="mt-auto">
                        <button type="button" class="btn btn-primary btn-lg w-100">
                            Select Buster's Bistro
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
