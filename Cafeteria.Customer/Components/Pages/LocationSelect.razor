@page "/"
@using Cafeteria.Shared

<PageTitle>Select Location</PageTitle>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Select Your Location</h2>
            <p class="text-muted">Please choose your cafeteria location to continue</p>
        </div>
    </div>

    <div class="row justify-content-center">
        @foreach (var location in locations)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column text-center">
                        <h5 class="card-title">@location.Name</h5>
                        <p class="card-text text-muted">@location.Address</p>
                        <div class="mt-auto">
                            <button type="button" class="btn btn-primary btn-lg w-100">
                                Select @location.Name
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private List<Location> locations = new();

    protected override void OnInitialized()
    {
        locations = new List<Location>
        {
            new Location(
                name: "Badger Den",
                address: "GSC Cafeteria on the Ground Floor"
            ),
            new Location(
                name: "Buster's Bistro", 
                address: "Karen H. Huntsman Library Gallery"
            )
        };
    }
}
