@using Cafeteria.Customer.Components.Pages.SelectionModal

<GenericModal IsOpen="@IsOpen" 
              Title="Confirm Action" 
              OnClose="@OnClose"
              ModalSize="modal-md"
              IsScrollable="false"
              ShowCloseButton="true"
              HeaderClass="bg-warning text-dark"
              BodyClass="p-3">
    <ChildContent>
        <p>@Message</p>
    </ChildContent>
    <FooterContent>
        <button type="button" class="btn btn-secondary" @onclick="OnClose">
            Cancel
        </button>
        <button type="button" class="btn btn-primary" @onclick="OnConfirm">
            Confirm
        </button>
    </FooterContent>
</GenericModal>

@code {
    [Parameter]
    public bool IsOpen { get; set; }

    [Parameter]
    public string Message { get; set; } = "Are you sure you want to proceed?";

    [Parameter]
    public EventCallback OnClose { get; set; }

    [Parameter]
    public EventCallback OnConfirm { get; set; }
}
