@page "/place-order"
@rendermode InteractiveServer
@using Cafeteria.Shared.DTOs
@using Cafeteria.Customer.Components.Pages

<PageTitle>Review Your Order</PageTitle>

<ConfirmationToast 
    IsVisible="@_showToast" 
    Title="Order Placed!"
    Message="@_toastMessage"
    OnHidden="@OnToastHidden" />

<div class="container">
    @if (!IsInitialized || _isLoading)
    {
        <div class="row">
            <div class="col-12 text-center mt-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-3">Loading your order...</p>
            </div>
        </div>
    }
    else if (IsInitialized && PlaceOrderVM.ErrorOccurred())
    {
        Navigation.NavigateTo("/error", false);
    }
    else if (Order == null || (!Order.Entrees.Any() && !Order.Sides.Any() && !Order.Drinks.Any()))
    {
        <div class="row">
            <div class="col-12 text-center">
                <div class="alert alert-danger">
                    <h4>Error loading order</h4>
                    <p>Your order is empty. Please build an order first.</p>
                    <a href="@GetStationSelectUrl()" class="btn btn-primary">Start an Order</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <h2>
                    @if (Order.Location != null)
                    {
                        <text>Your Order at the @Order.Location.LocationName</text>
                    }
                    else
                    {
                        <text>Review Your Order</text>
                    }
                </h2>
                <p class="text-muted">Please review your selections before placing your order</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                @if (Order.Entrees.Any())
                {
                    <h4 class="mt-3 mb-3">Entrees</h4>
                    @foreach (var entreeItem in Order.Entrees)
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">@entreeItem.Entree.EntreeName</h5>
                                @if (Order.IsCardOrder)
                                {
                                    <h6 class="text-success">$@entreeItem.Entree.EntreePrice.ToString("F2")</h6>
                                }
                                
                                @if (entreeItem.SelectedOptions.Any())
                                {
                                    <h6 class="card-subtitle mb-2 mt-3 text-muted">Options:</h6>
                                    <ul class="list-group list-group-flush">
                                        @foreach (var option in entreeItem.SelectedOptions)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                                @option.Option.FoodOptionName (@option.OptionType.FoodOptionTypeName)
                                                @if (Order.IsCardOrder && option.OptionType.FoodOptionPrice > 0)
                                                {
                                                    <span class="badge bg-secondary rounded-pill">+$@option.OptionType.FoodOptionPrice.ToString("F2")</span>
                                                }
                                            </li>
                                        }
                                    </ul>
                                }
                            </div>
                        </div>
                    }
                }

                @if (Order.Sides.Any())
                {
                    <h4 class="mt-4 mb-3">Sides</h4>
                    @foreach (var sideItem in Order.Sides)
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">@sideItem.Side.SideName</h5>
                                @if (Order.IsCardOrder)
                                {
                                    <h6 class="text-success">$@sideItem.Side.SidePrice.ToString("F2")</h6>
                                }
                                
                                @if (sideItem.SelectedOptions.Any())
                                {
                                    <h6 class="card-subtitle mb-2 mt-3 text-muted">Options:</h6>
                                    <ul class="list-group list-group-flush">
                                        @foreach (var option in sideItem.SelectedOptions)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                                @option.Option.FoodOptionName (@option.OptionType.FoodOptionTypeName)
                                                @if (Order.IsCardOrder && option.OptionType.FoodOptionPrice > 0)
                                                {
                                                    <span class="badge bg-secondary rounded-pill">+$@option.OptionType.FoodOptionPrice.ToString("F2")</span>
                                                }
                                            </li>
                                        }
                                    </ul>
                                }
                            </div>
                        </div>
                    }
                }

                @if (Order.Drinks.Any())
                {
                    <h4 class="mt-4 mb-3">Drinks</h4>
                    @foreach (var drink in Order.Drinks)
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">@drink.DrinkName</h5>
                                @if (Order.IsCardOrder)
                                {
                                    <h6 class="text-success">$@drink.DrinkPrice.ToString("F2")</h6>
                                }
                            </div>
                        </div>
                    }
                }
            </div>
            
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Order Summary</h5>
                        <hr />
                        
                        @if (Order.Entrees.Any())
                        {
                            <div class="d-flex justify-content-between mb-2">
                                <span>Entrees (@Order.Entrees.Count)</span>
                                @if (Order.IsCardOrder)
                                {
                                    <span>$@Order.Entrees.Sum(e => e.Entree.EntreePrice + e.SelectedOptions.Sum(o => o.OptionType.FoodOptionPrice)).ToString("F2")</span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </div>
                        }
                        
                        @if (Order.Sides.Any())
                        {
                            <div class="d-flex justify-content-between mb-2">
                                <span>Sides (@Order.Sides.Count)</span>
                                @if (Order.IsCardOrder)
                                {
                                    <span>$@Order.Sides.Sum(s => s.Side.SidePrice + s.SelectedOptions.Sum(o => o.OptionType.FoodOptionPrice)).ToString("F2")</span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </div>
                        }
                        
                        @if (Order.Drinks.Any())
                        {
                            <div class="d-flex justify-content-between mb-2">
                                <span>Drinks (@Order.Drinks.Count)</span>
                                @if (Order.IsCardOrder)
                                {
                                    <span>$@Order.Drinks.Sum(d => d.DrinkPrice).ToString("F2")</span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </div>
                        }
                        
                        <hr />
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total Price:</strong>
                            @if (Order.IsCardOrder)
                            {
                                <strong class="text-success">$@Price.ToString("F2")</strong>
                            }
                            else
                            {
                                <strong class="text-success">1 Swipe</strong>
                            }
                        </div>
                        
                        <button @onclick="HandlePlaceOrder" class="btn btn-success btn-lg w-100 mb-2">Place Order</button>
                        <a href="@GetStationSelectUrl()" class="btn btn-outline-secondary w-100">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
