@page "/place-order"
@using Cafeteria.Shared.DTOs
@using Cafeteria.Customer.Components.Pages

<PageTitle>Review Your Order</PageTitle>

<div class="container">
    @if (Order == null)
    {
        <div class="row">
            <div class="col-12 text-center">
                <div class="alert alert-danger">
                    <h4>Error loading order</h4>
                    <p>No current order has been found. Please build an order first.</p>
                    <a href="/" class="btn btn-primary">Start an Order</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <h2>Review Your Order</h2>
                <p class="text-muted">Please review your selections before placing your order</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                @* Entrees Section *@
                @if (Order.Entrees.Any())
                {
                    <h4 class="mt-3 mb-3">Entrees</h4>
                    @foreach (var entreeItem in Order.Entrees)
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">@entreeItem.Entree.EntreeName</h5>
                                <h6 class="text-success">$@entreeItem.Entree.EntreePrice.ToString("F2")</h6>
                                
                                @if (entreeItem.SelectedOptions.Any())
                                {
                                    <h6 class="card-subtitle mb-2 mt-3 text-muted">Options:</h6>
                                    <ul class="list-group list-group-flush">
                                        @foreach (var option in entreeItem.SelectedOptions)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                                @option.Option.FoodOptionName (@option.OptionType.FoodOptionTypeName)
                                                @if (option.OptionType.FoodOptionPrice > 0)
                                                {
                                                    <span class="badge bg-secondary rounded-pill">+$@option.OptionType.FoodOptionPrice.ToString("F2")</span>
                                                }
                                            </li>
                                        }
                                    </ul>
                                }
                            </div>
                        </div>
                    }
                }

                @* Sides Section *@
                @if (Order.Sides.Any())
                {
                    <h4 class="mt-4 mb-3">Sides</h4>
                    @foreach (var sideItem in Order.Sides)
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">@sideItem.Side.SideName</h5>
                                <h6 class="text-success">$@sideItem.Side.SidePrice.ToString("F2")</h6>
                                
                                @if (sideItem.SelectedOptions.Any())
                                {
                                    <h6 class="card-subtitle mb-2 mt-3 text-muted">Options:</h6>
                                    <ul class="list-group list-group-flush">
                                        @foreach (var option in sideItem.SelectedOptions)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                                @option.Option.FoodOptionName (@option.OptionType.FoodOptionTypeName)
                                                @if (option.OptionType.FoodOptionPrice > 0)
                                                {
                                                    <span class="badge bg-secondary rounded-pill">+$@option.OptionType.FoodOptionPrice.ToString("F2")</span>
                                                }
                                            </li>
                                        }
                                    </ul>
                                }
                            </div>
                        </div>
                    }
                }

                @* Drinks Section *@
                @if (Order.Drinks.Any())
                {
                    <h4 class="mt-4 mb-3">Drinks</h4>
                    @foreach (var drink in Order.Drinks)
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">@drink.DrinkName</h5>
                                <h6 class="text-success">$@drink.DrinkPrice.ToString("F2")</h6>
                            </div>
                        </div>
                    }
                }

                @if (!Order.Entrees.Any() && !Order.Sides.Any() && !Order.Drinks.Any())
                {
                    <div class="alert alert-info">
                        <p>Your order is empty. Please add some items to continue.</p>
                        <a href="/" class="btn btn-primary">Browse Menu</a>
                    </div>
                }
            </div>
            
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Order Summary</h5>
                        <hr />
                        
                        @if (Order.Entrees.Any())
                        {
                            <div class="d-flex justify-content-between mb-2">
                                <span>Entrees (@Order.Entrees.Count)</span>
                                <span>$@Order.Entrees.Sum(e => e.Entree.EntreePrice + e.SelectedOptions.Sum(o => o.OptionType.FoodOptionPrice)).ToString("F2")</span>
                            </div>
                        }
                        
                        @if (Order.Sides.Any())
                        {
                            <div class="d-flex justify-content-between mb-2">
                                <span>Sides (@Order.Sides.Count)</span>
                                <span>$@Order.Sides.Sum(s => s.Side.SidePrice + s.SelectedOptions.Sum(o => o.OptionType.FoodOptionPrice)).ToString("F2")</span>
                            </div>
                        }
                        
                        @if (Order.Drinks.Any())
                        {
                            <div class="d-flex justify-content-between mb-2">
                                <span>Drinks (@Order.Drinks.Count)</span>
                                <span>$@Order.Drinks.Sum(d => d.DrinkPrice).ToString("F2")</span>
                            </div>
                        }
                        
                        <hr />
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total Price:</strong>
                            <strong class="text-success">$@Price.ToString("F2")</strong>
                        </div>
                        
                        <button class="btn btn-success btn-lg w-100 mb-2">Place Order</button>
                        <a href="/" class="btn btn-outline-secondary w-100">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
